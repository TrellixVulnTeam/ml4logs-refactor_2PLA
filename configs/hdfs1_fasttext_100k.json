                },
                {
                    "name": "one_class_svm",
                    "args": {}
                },
                {
                    "name": "isolation_forest",
                    "args": {
                        "random_state": 14235
                    }
                },
                {
                    "name": "pca",
                    "args": {
                        "random_state": 14235
                    }
                }
